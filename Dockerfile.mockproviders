# ── Stage 1: Build ───────────────────────────────────────────────────────────
FROM golang:1.24-alpine AS builder

RUN apk add --no-cache git ca-certificates

WORKDIR /src

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 \
    go build -trimpath -ldflags="-s -w" -o /bin/mockproviders ./test/mock/providers

# ── Stage 2: Runtime ─────────────────────────────────────────────────────────
FROM alpine:3.19

RUN apk add --no-cache ca-certificates && \
    addgroup -S app && adduser -S -G app app

COPY --from=builder /bin/mockproviders /bin/mockproviders

USER app

# Expose all five mock provider ports.
EXPOSE 19001 19002 19003 19004 19005

HEALTHCHECK --interval=5s --timeout=3s --start-period=3s --retries=5 \
    CMD wget -qO- http://localhost:19001/v1/models || exit 1

ENTRYPOINT ["/bin/mockproviders"]
